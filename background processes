/usr/pgsql-18/bin/postgres -D /u01/pgsql/18

	- connection establishment
	- take care of other background processes
	- instance recovery

postgres: walwriter
	
	- writes information from wal buffers to wal files
	- on every commit.

postgres: background writer

	- writes information from shared buffers to datafile files
	- on every #bgwriter_delay = 200ms duration
	- everytime it writes, it takes	#bgwriter_lru_maxpages = 100 amount of buffers
	
postgres: checkpointer

	- ensures your dirty buffers are written to disk
	- checkpoint_timeout = 5m time 

postgres: logger

	- writes event information to alert log file

# REPORTING AND LOGGING


# - Where to Log - Where do you want my alert log to go?

log_destination = 'stderr'
logging_collector = on 
log_directory = 'log'  [or] log_directory = '/u01/logs' 
log_filename = 'postgresql-%a.log'  [or] log_filename = 'postgresql-%d-%m-%y.log'

# - When to Log - How much information you want?

